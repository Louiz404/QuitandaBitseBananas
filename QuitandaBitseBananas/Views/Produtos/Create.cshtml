@model QuitandaBitseBananas.Models.Produto

@{
    ViewData["Title"] = "Novo Produto";
}

<h1>Novo Produto</h1>
<h4 class="text-muted">Cadastrar item no estoque</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Ex: Banana Prata" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Preco" class="control-label fw-bold"></label>
                    <input asp-for="Preco" class="form-control" type="text" id="precoInput"
                           oninput="this.value = this.value.replace('.', ','); updateValorTotal()" placeholder="0,00" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Unidade" class="control-label fw-bold"></label>
                    @Html.DropDownListFor(model => model.Unidade,
                    (IEnumerable<SelectListItem>)ViewBag.UnidadesMedida,
                                        "Selecione a Unidade",
                                        new { @class = "form-control" })
                    <span asp-validation-for="Unidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Quantidade" class="control-label fw-bold"></label>
                    <input asp-for="Quantidade" class="form-control" type="number" min="0" id="quantidadeInput" oninput="updateValorTotal()" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                    <small class="text-muted">Isso criará o estoque inicial automaticamente.</small>
                </div>

                <div class="col-md-6 form-group mb-3">
                    <label asp-for="DataValidade" class="control-label fw-bold"></label>
                    <input asp-for="DataValidade" class="form-control" type="date" />
                    <span asp-validation-for="DataValidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="CategoriaId" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <select asp-for="CategoriaId" class="form-control" id="selectCategoria" asp-items="ViewBag.CategoriaId">
                            <option value="">-- Selecione a Categoria --</option>
                        </select>
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalNovaCategoria" title="Nova Categoria">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group mb-3">
                    <label asp-for="FornecedorId" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <select asp-for="FornecedorId" class="form-control" id="selectFornecedor" asp-items="ViewBag.FornecedorId">
                            <option value="">-- Selecione o Fornecedor --</option>
                        </select>
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalNovoFornecedor" title="Novo Fornecedor">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3 p-3 bg-light border rounded">
                <label for="arquivoImagem" class="control-label fw-bold">Foto do Produto</label>
                <input type="file" name="arquivoImagem" id="arquivoImagem" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                <small class="text-muted">Formatos aceitos: JPG, PNG, GIF</small>
            </div>

            <div class="form-group mb-3">
                <label for="ValorTotal" class="control-label fw-bold">Valor Total Inicial (R$)</label>
                <input type="text" id="valorTotalInput" class="form-control form-control-lg text-success fw-bold" readonly value="0,00" />
            </div>

            <hr />

            <div class="form-group">
                <input type="submit" value="Salvar Produto" class="btn btn-success btn-lg px-5" />
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalNovaCategoria" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nova Categoria Rápida</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Nome da Categoria</label>
                    <input type="text" id="inputNovaCategoria" class="form-control" placeholder="Ex: Temperos" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="salvarCategoriaRapida()">Salvar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNovoFornecedor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Novo Fornecedor Rápido</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Nome do Fornecedor</label>
                    <input type="text" id="inputNovoFornecedor" class="form-control" placeholder="Ex: Zé das Frutas" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="salvarFornecedorRapido()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Validação Ponto/Vírgula
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }

        // --- SALVAR CATEGORIA ---
        async function salvarCategoriaRapida() {
            var nomeCategoria = document.getElementById('inputNovaCategoria').value;
            if (!nomeCategoria) { alert("Digite um nome!"); return; }
            var dados = { Name: nomeCategoria };

            try {
                const resposta = await fetch('/Categorias/CriarRapido', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(dados)
                });

                if (resposta.ok) {
                    const nova = await resposta.json();
                    var select = document.getElementById('selectCategoria');
                    var option = document.createElement("option");
                    option.text = nova.name;
                    option.value = nova.id;
                    option.selected = true;
                    select.add(option);
                    bootstrap.Modal.getInstance(document.getElementById('modalNovaCategoria')).hide();
                    document.getElementById('inputNovaCategoria').value = "";
                } else {
                    alert("Erro ao salvar.");
                }
            } catch (erro) { console.error(erro); alert("Erro de conexão."); }
        }

        // --- SALVAR FORNECEDOR ---
        async function salvarFornecedorRapido() {
            var nomeFornecedor = document.getElementById('inputNovoFornecedor').value;
            if (!nomeFornecedor) { alert("Digite um nome!"); return; }
            var dados = { Name: nomeFornecedor };

            try {
                const resposta = await fetch('/Fornecedores/CriarRapido', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(dados)
                });

                if (resposta.ok) {
                    const novo = await resposta.json();
                    var select = document.getElementById('selectFornecedor');
                    var option = document.createElement("option");
                    option.text = novo.name;
                    option.value = novo.id;
                    option.selected = true;
                    select.add(option);
                    bootstrap.Modal.getInstance(document.getElementById('modalNovoFornecedor')).hide();
                    document.getElementById('inputNovoFornecedor').value = "";
                } else {
                    alert("Erro ao salvar.");
                }
            } catch (erro) { console.error(erro); alert("Erro de conexão."); }
        }

        // --- CORREÇÃO DE CÁLCULO (PONTO VS VÍRGULA) ---
        function updateValorTotal() {
            var precoTexto = document.getElementById('precoInput').value;
            var qtdTexto = document.getElementById('quantidadeInput').value;

            // Substitui vírgula por ponto para o JS calcular certo
            var precoNum = parseFloat(precoTexto.replace(',', '.'));
            var qtdNum = parseFloat(qtdTexto);

            if (!isNaN(precoNum) && !isNaN(qtdNum)) {
                var total = precoNum * qtdNum;
                document.getElementById('valorTotalInput').value = total.toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            } else {
                document.getElementById('valorTotalInput').value = "0,00";
            }
        }
    </script>
}